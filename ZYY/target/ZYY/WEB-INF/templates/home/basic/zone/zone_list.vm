#set($layout = "emptyLayout.vm")
#parse("sys_param.vm")

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>区域名称</th>
        <th>区域编码</th>
        <th>名称简拼</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($row in $pageInfo.list)
        <tr>
            <td>
                $!{row.name}
            </td>
            <td>
                $!{row.code}
            </td>
            <td>
                $!{row.simplePinyin}
            </td>
            <td>
                <a href="#modify" data-toggle="modal" id="$!{row.id}">修改</a>
                <a href="javascript:void(0)" class="delete" src="$!{CONTEXT_PATH}/zone/delete?id=$!{row.id}">删除</a>
            </td>
        </tr>
        #end
    </tbody>
</table>
#parse('common/manager_list_nodata.vm')
#pagination()
